{% extends 'security/base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}

    <main class="main" id="top">
        <div class="container-fluid">
            <div class="row min-vh-100 flex-center g-0">
            <div class="col-lg-8 col-xxl-5 py-3 position-relative">
                <img class="bg-auth-circle-shape"
                            src="{{ asset('build/images/icons/spot-illustrations/bg-shape.png') }}" alt="" width="250">
                <img class="bg-auth-circle-shape-2"
                        src="{{ asset('build/images/icons/spot-illustrations/shape-1.png') }}" alt="" width="150">
                <div class="card overflow-hidden z-index-1">
                <div class="card-body p-0">
                    <div class="row g-0 h-100">
                        <div class="col-md-5 text-center bg-card-gradient">
                            <div class="position-relative p-4 pt-md-5 pb-md-7 light">
                            <div class="bg-holder bg-auth-card-shape" style="background-image:url({{ asset('build/images/icons/spot-illustrations/half-circle.png')}});"></div>
                            <div class="z-index-1 position-relative"><a class="link-light mb-4 font-sans-serif fs-4 d-inline-block fw-bolder" href="../../../index.html">Falcon</a>
                                <p class="opacity-75 text-white">
                                Inscrivez-vous et accédé à l'ensemble des services mis à disposition par Falcon !
                                </p>
                            </div>
                            </div>
                            <div class="mt-3 mb-4 mt-md-4 mb-md-5 light">
                            <p class="pt-3 text-white">Vous avez un compte ?<br><a class="btn btn-outline-light mt-2 px-4" href="{{ path('login') }}">Connectez-vous</a></p>
                            </div>
                        </div>
                        <div class="col-md-7 d-flex flex-center">
                            <div class="p-4 p-md-5 flex-grow-1">
                            <h3>Inscription</h3>
                            {{form_start(form)}}
                            
                            <div class="mb-3">
                                <label class="form-label" for="card-lastname">Nom</label>
                                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}})}}
                                <div class="invalid-feedback">Please provide a valid city.</div>
                                <div class="invalid-feedback d-block">{{ form_errors(form.lastname) }}</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="card-firstname">Prenom</label>
                                {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}})}}
                                <div class="invalid-feedback d-block">{{ form_errors(form.firstname) }}</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="card-email">Email</label>
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}})}}
                                <div class="invalid-feedback d-block">{{ form_errors(form.email) }}</div>
                            </div>

                            {% for passwordField in form.password %}
                            <div class="mb-3">
                                {{ form_label(passwordField)}}
                                {{ form_widget(passwordField, {'attr': {'class': 'form-control'}})}}
                                <div class="invalid-feedback d-block">{{ form_errors(passwordField) }}</div>
                            </div>
                            {% endfor %}

                            <div class="form-check">
                                {{ form_widget(form.acceptTermsOfUse, {'attr': {'class': 'form-check-input'}})}}
                                <label class="form-label" for="card-register-checkbox">
                                    Acceptez les termes et conditions d'utilisations
                                </label>
                                <div class="invalid-feedback d-block">{{ form_errors(form.acceptTermsOfUse) }}</div>

                            </div>

                            <div class="mb-3">
                                <button class="btn btn-primary d-block w-100 mt-3" type="submit" name="submit">
                                    Register
                                </button>
                            </div>

                            {{form_end(form)}}
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
            </div>
        </div>
    </main>
{% endblock %}