{% extends 'security/base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<main class="container d-flex flex-column">
    <div class="row align-items-center justify-content-center g-0 min-vh-100">
        <div class="col-12 col-md-8 col-lg-6 col-xxl-4 py-8 py-xl-0">
            <div class="card smooth-shadow-md">
                <div class="card-body p-6">
                    <div class="mb-4">
                        <h3>Inscription</h3>
                        <p class="mb-6">
                            Inscrivez-vous et accédé à l'ensemble des services mis à disposition par Falcon !
                        </p>
                    </div>
                    {{ form_start(form) }}
                        <div class="mb-3">
                            <label for="lastname" class="form-label">Nom</label>
                            {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}})}}
                            {% for error in form.lastname.vars.errors %}
                                <div class="invalid-feedback d-block">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        <div class="mb-3">
                            <label for="firstname" class="form-label">Prenom</label>
                            {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}})}}
                            {% for error in form.firstname.vars.errors %}
                                <div class="invalid-feedback d-block">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}})}}
                            {% for error in form.email.vars.errors %}
                                <div class="invalid-feedback d-block">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        {% for passwordField in form.password %}
                        <div class="mb-3">
                            {{ form_label(passwordField)}}
                            {{ form_widget(passwordField, {'attr': {'class': 'form-control'}})}}
                            {% for error in passwordField.vars.errors %}
                                <div class="invalid-feedback d-block">{{ error.message }}</div>
                            {% endfor %}
                        </div>
                        {% endfor %}

                        <div class="mb-3">
                            <div class="form-check custom-checkbox">
                                {{ form_widget(form.acceptTermsOfUse, {'attr': {'class': 'form-check-input'}})}}
                                <label class="form-check-label" for="registration_acceptTermsOfUse">
                                    <span class="fs-5">
                                        Acceptez les termes et conditions d'utilisations.
                                    </span>
                                </label>
                                {% for error in form.acceptTermsOfUse.vars.errors %}
                                    <div class="invalid-feedback d-block">{{ error.message }}</div>
                                {% endfor %}
                            </div>
                        </div>

                        <div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    S'inscrire
                                </button>
                            </div>

                            <div class="d-md-flex justify-content-between mt-4">
                                <div class="mb-2 mb-md-0">
                                    Vous avez un compte ? 
                                    <a href="{{ path('login') }}" class="fs-5">
                                        Connectez-vous !
                                    </a>
                                </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}