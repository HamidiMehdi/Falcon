{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    <main class="main" id="top">
        <div class="container-fluid">
            <div class="row min-vh-100 flex-center g-0">
                <div class="col-lg-8 col-xxl-5 py-3 position-relative">
                    <img class="bg-auth-circle-shape"
                         src="{{ asset('build/images/icons/spot-illustrations/bg-shape.png') }}" alt="" width="250">
                    <img class="bg-auth-circle-shape-2"
                         src="{{ asset('build/images/icons/spot-illustrations/shape-1.png') }}" alt="" width="150">

                    <div class="card overflow-hidden z-index-1">
                        <div class="card-body p-0">
                            <div class="row g-0 h-100">
                                <div class="col-md-5 text-center bg-card-gradient">
                                    <div class="position-relative p-4 pt-md-5 pb-md-7 light">
                                        <div class="bg-holder bg-auth-card-shape" style="background-image:url({{ asset('build/images/icons/spot-illustrations/half-circle.png')}});"></div>
                                        <div class="z-index-1 position-relative">
                                            <a class="link-light mb-4 font-sans-serif fs-4 d-inline-block fw-bolder">Falcon</a>
                                            <p class="opacity-75 text-white">
                                                Connectez-vous et accédé a l'ensemble de services mis à disposition par Falcon !
                                            </p>
                                        </div>
                                    </div>
                                    <div class="mt-3 mb-4 mt-md-4 mb-md-5 light">
                                        <p class="text-white">
                                            Vous n'avez pas de compte ?<br>
                                            <a class="text-decoration-underline link-light" href={{ path('registration') }}>Inscrivez-vous !</a>
                                        </p>
                                        <p class="mb-0 mt-4 mt-md-5 fs--1 fw-semi-bold text-white opacity-75">
                                            Lire nos <a class="text-decoration-underline text-white" href="#!">termes</a>
                                            et <a class="text-decoration-underline text-white" href="#!">conditions</a>
                                        </p>
                                    </div>
                                </div>

                                <div class="col-md-7 d-flex flex-center">
                                    <div class="p-4 p-md-5 flex-grow-1">
                                        <div class="row flex-between-center">
                                            <div class="col-auto">
                                                <h3>Authentification</h3>
                                            </div>
                                        </div>
                                        
                                        {% if app.session.get('BAD_CREDENTIALS') is not empty %}
                                        <div class="alert alert-secondary" role="alert">{{ app.session.get('BAD_CREDENTIALS') }}</div>
                                        {% endif %}

                                        <form method="POST" action="{{path('login')}}">
                                            <div class="mb-3">
                                                <label class="form-label" for="card-email">Email</label>
                                                <input class="form-control" id="card-email" type="email" name="_email" value="{{ app.session.get('LAST_EMAIL') }}"/>
                                            </div>
                                            <div class="mb-3">
                                                <div class="d-flex justify-content-between">
                                                    <label class="form-label" for="card-password">Mot de passe</label>
                                                </div>
                                                <input class="form-control" id="card-password" type="password" name="_password" />
                                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('login_form') }}">
                                            </div>
                                            <div class="row flex-between-center">
                                                <div class="col-auto">
                                                    <div class="form-check mb-0">
                                                        <input class="form-check-input" type="checkbox" id="card-checkbox" name="_remember_me" />
                                                        <label class="form-check-label mb-0" for="card-checkbox">Se souvenir de moi</label>
                                                    </div>
                                                </div>
                                                <div class="col-auto">
                                                    <a class="fs--1" href="forgot-password.html">Mot de passe oublié ?</a>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <button class="btn btn-primary d-block w-100 mt-3" type="submit" name="submit">
                                                    Connexion
                                                </button>
                                            </div>
                                        </form>
                                        <div class="position-relative mt-4">
                                            <hr />
                                            <div class="divider-content-center">Se connecter avec</div>
                                        </div>
                                        <div class="row g-2 mt-2">
                                            <div class="col-sm-6">
                                                <a class="btn btn-outline-google-plus btn-sm d-block w-100" href="#">
                                                    <span class="fab fa-google-plus-g me-2" data-fa-transform="grow-8"></span> google
                                                </a>
                                            </div>
                                            <div class="col-sm-6">
                                                <a class="btn btn-outline-facebook btn-sm d-block w-100" href="#">
                                                    <span class="fab fa-facebook-square me-2" data-fa-transform="grow-8"></span> facebook
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}